<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#A5B253</item>
    </style>

    <style name="default_style_textView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name = "text_view_highlighted">
        <item name="android:textColor">#ffffff</item>
        <item name = "android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="highlight_title">
        <item name="android:textColor">#76B900</item>
        <item name = "android:textSize">25sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PreferencesTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#252525</item>
        <item name ="android:textColor">#ffffff</item>
         <item name="android:textColorSecondary">#ffffff</item>
    </style>


</resources>
